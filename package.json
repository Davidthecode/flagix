{
  "name": "flagix",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "web:dev": "turbo dev --filter=@flagix/web",
    "api:dev": "turbo dev --filter=@flagix/api",
    "db:migrate": "pnpm --filter @flagix/db db:migrate",
    "db:deploy": "pnpm --filter @flagix/db db:deploy",
    "db:generate": "pnpm --filter @flagix/db db:generate",
    "db:push": "pnpm --filter @flagix/db db:push",
    "db:studio": "pnpm --filter @flagix/db db:studio",
    "check-types": "turbo run check-types",
    "lint": "npx ultracite@latest check",
    "format": "npx ultracite@latest fix",
    "release": "turbo run build --filter=\"@flagix/js-sdk\" --filter=\"@flagix/react\" --filter=\"@flagix/evaluation-core\" && changeset publish",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "tsc-alias": "^1.8.16",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "ultracite": "6.5.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.0",
      "@types/react-dom": "19.0.0"
    }
  }
}
