{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
      "env": ["DATABASE_URL", "NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "lint": {
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^build", "build"], 
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false,
      "interactive": true
    }
  }
}
